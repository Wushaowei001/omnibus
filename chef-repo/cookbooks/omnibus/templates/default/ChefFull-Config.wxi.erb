<?xml version="1.0" encoding="utf-8"?>
<Include>
  <!--
    Versioning. These have to be changed for upgrades.
  -->
  <?define MajorVersion="<%= @major_version %>" ?>
  <?define MinorVersion="<%= @minor_version %>" ?>
  <?define BuildVersion="<%= @build_version %>" ?>
  <!-- Revision is NOT used by WiX in the upgrade procedure -->
  <?define Revision="<%= @revision %>" ?>
  <!-- Full version number to display -->
  <?define VersionNumber="$(var.MajorVersion).$(var.MinorVersion).$(var.BuildVersion).$(var.Revision)" ?>
  <!-- Full version number minus Revision -->
  <?define VersionNumberFriendly="$(var.MajorVersion).$(var.MinorVersion).$(var.BuildVersion)" ?>
  <!--
    Upgrade code HAS to be the same for all updates.
    Once you've chosen it don't change it.
  -->
  <?define UpgradeCode="<%= @guid %>" ?>

</Include>
